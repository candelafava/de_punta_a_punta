<section>
    <h2>Región Sur de Argentina</h2>
    <p>Información interesante sobre la región sur de Argentina...</p>
</section>

<div id="map" style="height: 400px;"></div>

<script> <!-- Agrega la etiqueta script para el código JavaScript -->
const map = L.map('map').setView([-45.878760, -67.528471], 7);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
}).addTo(map);

L.marker([-45.878760, -67.528471]).addTo(map)
    .bindPopup('Lugar de interés en la región sur')
    .openPopup();
</script>

